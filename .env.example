# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Vite Public Environment Variables
VITE_PUBLIC_SUPABASE_URL=your-supabase-url
VITE_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# API Configuration
API_PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=your-database-url
POSTGRES_URL=your-postgres-url
POSTGRES_USER=your-postgres-user
POSTGRES_HOST=your-postgres-host
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=your-postgres-database
POSTGRES_PRISMA_URL=your-postgres-prisma-url
POSTGRES_URL_NON_POOLING=your-postgres-url-non-pooling

# Supabase JWT Secret
SUPABASE_JWT_SECRET=your-jwt-secret

# Security Configuration
JWT_SECRET=your-jwt-secret-for-app
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret
CSRF_SECRET=your-csrf-secret

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Email Configuration
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-password

# Payment Gateway Configuration
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# WhatsApp Configuration
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=your-whatsapp-number

# SMS Configuration
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=your-sender-id

# Monitoring Configuration
MONITORING_API_KEY=your-monitoring-api-key
ERROR_TRACKING_DSN=your-error-tracking-dsn

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1