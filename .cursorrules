# Cursor Performance Rules - Ultimate Edition
# Bu dosya Cursor'ın performansını maksimuma çıkarmak için özel kurallar içerir

# Terminal ayarları - Optimized for Windows
terminal.integrated.shell.windows: "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
terminal.integrated.shellArgs.windows: ["-ExecutionPolicy", "Bypass", "-NoProfile", "-NoLogo"]
terminal.integrated.cwd: "${workspaceFolder}"
terminal.integrated.gpuAcceleration: "on"
terminal.integrated.rendererType: "canvas"
terminal.integrated.shellIntegration.enabled: false
terminal.integrated.scrollback: 1000
terminal.integrated.fastScrollSensitivity: 5
terminal.integrated.mouseWheelScrollSensitivity: 1

# Performans ayarları - Enhanced
files.watcherExclude: {
  "**/node_modules/**": true,
  "**/dist/**": true,
  "**/.git/**": true,
  "**/coverage/**": true,
  "**/*.backup": true,
  "**/scripts/**": true,
  "**/docs/**": true,
  "**/e2e/**": true,
  "**/migrations/**": true,
  "**/.vite/**": true,
  "**/supabase/**": true,
  "**/*.log": true,
  "**/tmp/**": true,
  "**/temp/**": true
}

# Auto-save ayarları - Optimized
files.autoSave: "afterDelay"
files.autoSaveDelay: 1500
files.autoSaveWorkspaceFilesOnly: true

# Format ayarları (performans için kapalı)
editor.formatOnSave: false
editor.formatOnPaste: false
editor.formatOnType: false
editor.formatOnSaveMode: "file"

# TypeScript ayarları - Ultra Fast
typescript.preferences.includePackageJsonAutoImports: "off"
typescript.suggest.autoImports: false
typescript.updateImportsOnFileMove.enabled: "never"
typescript.suggest.enabled: true
typescript.suggest.includeCompletionsForModuleExports: false
typescript.suggest.includeCompletionsWithSnippetText: false
typescript.suggest.includeCompletionsWithInsertText: false
typescript.suggest.includeCompletionsWithClassMemberSnippets: false
typescript.suggest.includeCompletionsWithObjectLiteralMethodSnippets: false
typescript.suggest.includeCompletionsWithFunctionParameterSnippets: false

# IntelliSense ayarları - Optimized
editor.quickSuggestions: {
  "other": true,
  "comments": false,
  "strings": false
}
editor.suggestOnTriggerCharacters: true
editor.acceptSuggestionOnCommitCharacter: false
editor.acceptSuggestionOnEnter: "on"
editor.snippetSuggestions: "bottom"
editor.wordBasedSuggestions: "off"

# Memory optimizasyonu - Maximum
workbench.enableExperiments: false
workbench.enableTelemetry: false
workbench.enableCrashReporter: false
workbench.enableProposedApi: false
workbench.enablePreviewFeatures: false

# File watching optimizasyonu - Enhanced
files.watcherExclude: {
  "**/node_modules/**": true,
  "**/dist/**": true,
  "**/.git/**": true,
  "**/coverage/**": true,
  "**/*.backup": true,
  "**/.vite/**": true,
  "**/supabase/**": true,
  "**/*.log": true
}

# Search ayarları - Optimized
search.exclude: {
  "**/node_modules": true,
  "**/dist": true,
  "**/.git": true,
  "**/coverage": true,
  "**/*.backup": true,
  "**/scripts": true,
  "**/docs": true,
  "**/e2e": true,
  "**/migrations": true,
  "**/.vite": true,
  "**/supabase": true,
  "**/*.log": true
}
search.useGlobalIgnoreFiles: false
search.useParentIgnoreFiles: false
search.useIgnoreFiles: false

# Git ayarları - Performance Focused
git.enabled: true
git.autorefresh: false
git.autofetch: false
git.autopull: false
git.confirmSync: false
git.enableSmartCommit: false
git.enableCommitSigning: false
git.showPushSuccessNotification: false

# Extensions ayarları - Minimal
extensions.autoUpdate: false
extensions.autoCheckUpdates: false
extensions.autoUpdate: false
extensions.ignoreRecommendations: true
extensions.showRecommendationsOnlyOnDemand: true

# Editor ayarları - Ultra Fast
editor.minimap.enabled: false
editor.renderWhitespace: "none"
editor.renderControlCharacters: false
editor.renderLineHighlight: "none"
editor.cursorBlinking: "solid"
editor.cursorSmoothCaretAnimation: "off"
editor.cursorSurroundingLines: 3
editor.cursorWidth: 2
editor.fontLigatures: false
editor.fontSize: 14
editor.lineHeight: 1.2
editor.wordWrap: "off"
editor.folding: false
editor.gotoLocation.multiple: "goto"
editor.lightbulb.enabled: false
editor.parameterHints.enabled: false
editor.hover.enabled: false
editor.suggest.showKeywords: false
editor.suggest.showSnippets: false
editor.suggest.showUsers: false
editor.suggest.showValues: false
editor.suggest.showFunctions: false
editor.suggest.showVariables: false
editor.suggest.showClasses: false
editor.suggest.showModules: false
editor.suggest.showProperties: false
editor.suggest.showEvents: false
editor.suggest.showOperators: false
editor.suggest.showUnits: false
editor.suggest.showColors: false
editor.suggest.showFiles: false
editor.suggest.showReferences: false
editor.suggest.showFolders: false
editor.suggest.showTypeParameters: false
editor.suggest.showWords: false
editor.suggest.showColors: false
editor.suggest.showFiles: false
editor.suggest.showReferences: false
editor.suggest.showFolders: false
editor.suggest.showTypeParameters: false
editor.suggest.showWords: false

# AI Agent Hızlı Performans Ayarları - Ultimate
cursor.ai.enabled: true
cursor.ai.autoComplete: true
cursor.ai.chat.enabled: true
cursor.ai.streaming: true
cursor.ai.maxTokens: 12000
cursor.ai.temperature: 0.05
cursor.ai.topP: 0.95
cursor.ai.frequencyPenalty: 0.0
cursor.ai.presencePenalty: 0.0
cursor.ai.responseTimeout: 10000
cursor.ai.requestDelay: 50
cursor.ai.batchRequests: true
cursor.ai.cacheEnabled: true
cursor.ai.cacheSize: "2GB"
cursor.ai.cacheTTL: 7200
cursor.ai.memoryLimit: "4GB"
cursor.ai.prioritizeSpeed: true
cursor.ai.enableFastMode: true
cursor.ai.parallelProcessing: true
cursor.ai.optimizeForPerformance: true
cursor.ai.enablePredictiveCaching: true
cursor.ai.enableSmartBatching: true
cursor.ai.enableCompression: true
cursor.ai.enableDeduplication: true

# AI Model Ayarları - Optimized
cursor.ai.model: "claude-3.5-sonnet"
cursor.ai.modelProvider: "anthropic"
cursor.ai.useLocalCache: true
cursor.ai.enablePredictiveText: true
cursor.ai.enableSmartSuggestions: true
cursor.ai.enableContextOptimization: true
cursor.ai.enableMemoryOptimization: true
cursor.ai.enableResponseOptimization: true

# AI Agent Özel Ayarları - Maximum Performance
cursor.ai.agent.enabled: true
cursor.ai.agent.autoExecute: true
cursor.ai.agent.maxConcurrentTasks: 8
cursor.ai.agent.timeoutPerTask: 20000
cursor.ai.agent.enableStreaming: true
cursor.ai.agent.batchCommands: true
cursor.ai.agent.optimizeWorkflow: true
cursor.ai.agent.enableParallelExecution: true
cursor.ai.agent.enableSmartQueuing: true
cursor.ai.agent.enableTaskPrioritization: true
cursor.ai.agent.enableResourceOptimization: true
cursor.ai.agent.enableMemoryManagement: true

# Performance Monitoring
cursor.ai.enablePerformanceMonitoring: true
cursor.ai.enableResourceTracking: true
cursor.ai.enableOptimizationSuggestions: true
cursor.ai.enableAutoOptimization: true

# Development Environment Optimizations
cursor.ai.enableDevModeOptimizations: true
cursor.ai.enableHotReloadOptimization: true
cursor.ai.enableBuildOptimization: true
cursor.ai.enableTestOptimization: true
