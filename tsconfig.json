{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Module Resolution - Optimized for speed
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // Type Checking - Balanced for performance
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,

    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@services/*": ["./src/services/*"],
      "@constants/*": ["./src/constants/*"],
      "@validators/*": ["./src/validators/*"]
    },

    
    // Interop and Compatibility - Optimized
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "preserveSymlinks": false,
    
    // Performance optimizations
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "disableSolutionSearching": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "vite.config.ts", 
    "node_modules", 
    "dist", 
    "api/**/*", 
    "**/*.test.ts", 
    "**/*.test.tsx", 
    "**/__tests__/**/*", 
    "src/lib/ai/moduleController.ts", 
    "src/lib/ai/workflowEngine.ts", 
    "src/lib/ai/aiAssistantManager.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "e2e/**/*",
    "supabase/**/*",
    "scripts/**/*",
    "migrations/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}